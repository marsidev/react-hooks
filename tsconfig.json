{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "types": ["node", "vitest/globals"],
		"lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
		"jsx": "react",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
       "~/*": ["src/*"],
       "lib": ["src/lib"],
       "lib/*": ["src/lib/*"]
    }
  }
}
